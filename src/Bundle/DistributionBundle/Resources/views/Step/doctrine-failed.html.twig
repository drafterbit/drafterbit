{% extends 'DistributionBundle::layout.html.twig' %}

{% block content %}

	<div class="row" style="margin-top:60px;">
	    <div class="col-md-6 col-md-offset-3" style="text-align:center">
	    	<h2>Parameters.yml</h2>
			<span class="help-block"><strong>Your paramaters file is not writable.</strong>
                     Either set the file permission or copy following content to config/parameters.yml manually
                     to continue to the next step</span>
	    </div>

	    <div class="col-md-6 col-md-offset-3" style="text-align:center">
			<textarea style="border:1px #e1e1e1 solid;padding:10px;background:#fff;width:100%;height:220px;" readonly="readonly">{{ content }}</textarea>
		</div>
	    <div class="col-md-6 col-md-offset-3">
	    	<a href="{{ url('_install_step', {index:0}) }}" class="btn btn-primary pull-right">Next Step</a>
		</div>
	</div>

{% endblock %}