<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="upload_dir">storage</parameter>
        <parameter key="upload_path">%kernel.root_dir%/../%upload_dir%</parameter>
    </parameters>

    <services>
        <service id="dt_file.server" class="Drafterbit\Bundle\FileBundle\Server">
            <argument>%upload_path%</argument>
            <argument type="service" id="filesystem" />
        </service>

        <service id="dt_file.frontpage.admin" class="Drafterbit\Bundle\FileBundle\System\Routing\Admin">
            <tag name="dt_system.frontpage"></tag>
            <argument type="service" id="service_container"/>
        </service>
    </services>
</container>
