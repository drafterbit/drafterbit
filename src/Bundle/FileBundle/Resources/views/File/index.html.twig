{% extends "CoreBundle::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='?uglifycss' output="assets/css/*.css" '@finder_css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div id="finder-container"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    '@bootstrap_contextmenu'
    '@jquery_form'
    '@finder_js'
    '@nunjucks'
    '@FileBundle/Resources/js/index.js'
    filter='?uglifyjs2' output="assets/js/*.js"
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {# @todo handle locale #}
    <!--<script type="text/javascript" src="{{ asset('plugins/finder/src/l10n/'~locale~'.js') }}"></script>-->
{% endblock %}
