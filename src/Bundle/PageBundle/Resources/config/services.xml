<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Log Formatter -->
        <service id="dt_log_display_formatter.page" class="Drafterbit\Bundle\PageBundle\System\Log\PageEntityFormatter">
            <argument type="service" id="kernel" />
            <tag name="dt_system_log.display_formatter" />
        </service>


        <service id="dt_page.frontpage.admin" class="Drafterbit\Bundle\PageBundle\System\Routing\Admin">
            <tag name="dt_system.frontpage"></tag>
            <argument type="service" id="service_container"/>
        </service>
    </services>
</container>
