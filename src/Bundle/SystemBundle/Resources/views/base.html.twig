<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{{ page_title|striptags }} | {{ system.sitename }}</title>

        {% block stylesheets %}
          {% stylesheets
            '@fontawesome'
            '@notify_css'
          %}
            <link rel="stylesheet" href="{{ asset_url }}" />
          {% endstylesheets %}

          {% stylesheets
            '@SystemBundle/Resources/scss/drafterbit-bootstrap.scss'
            '@SystemBundle/Resources/scss/drafterbit.scss'
            filter="scss"
          %}
            <link rel="stylesheet" href="{{ asset_url }}" />
          {% endstylesheets %}
        {% endblock %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body>
        <noscript>
            <style type="text/css"> div:not(.noscript), nav {margin: 0; padding: 0; display: none; } body {margin: 0;padding: 0} </style>
            <div class="noscript">Please use javascript-supported browser.</div>
        </noscript>

        <header class="dt-header">
          <div class="container">
            <div class="row">
                <div class="col-md-6">
                  <h1 class="dt-header-title">
                      <a class="dt-navbar-brand" href="{{url('dt_system_dashboard')}}">
                        {{ system.sitename }}
                      </a>
                  </h1>
                </div>
                <div class="col-md-6" style="">
                  <ul class="nav nav-pills navbar-right dt-user-menu">
                      <!-- /.dropdown -->
                      <li class="dropdown">
                          <a class=" navbar-link dropdown-toggle" data-toggle="dropdown" href="#">
                              <img width="20px;" class="dt-profile-avatar" src="{{gravatar_url(app.user.email, 17)}}" alt="{{app.user.username}}"/>
                              <!--<i class="fa fa-caret-down"></i>-->
                          </a>
                          <ul class="dropdown-menu dropdown-menu-right">
                              <div class="dropdown-caret">
                                  <span class="caret-outer"></span>
                                  <span class="caret-inner"></span>
                              </div>
                              <li> <a href="{{ base_url() }}" target="_blank">{{ __('Visit Site') }} <i class="fa fa-external-link"></i> </a> </li>
                              <!--<li><a href="#" class="soon">My Profile</a> </li>
                              <li><a href="#" class="soon">Preferences</a> </li>-->
                              <li><a href="{{ url('dt_user_security_logout') }}">{{ __('Logout') }}</a> </li>
                          </ul>
                          <!-- /.dropdown-user -->
                      </li>
                      <!-- /.dropdown -->
                  </ul>
                </div>
            </div>

          </div>
        </header>

        {% include 'SystemBundle:Partials:nav.html.twig' %}

        <div class="dt-main">
            <div class="container">
                <div class="row">
                  <div class="col-lg-12">
                      {% block page_title %}
                          {# we'll unescape title so we can put a link within it #}
                          {% autoescape false %}
                              <h2>{{ page_title }}</h2>
                          {% endautoescape %}
                      {% endblock %}
                  </div>
                </div>
            </div>

            {% block content %}{% endblock %}
        </div>
        {% include 'SystemBundle:Partials:footer.html.twig' %}

        {% block javascripts %}
            {% javascripts
             '@jquery'
             '@bootstrap_js'
             '@notify_js'
             '@sticky_kit'
             '@SystemBundle/Resources/js/responsive.js'
              %}
              <script src="{{ asset_url }}"></script>
            {% endjavascripts %}

            <script src="{{ url('asset_dt_js') }}"></script>
            <script src="{{ url('dt_system_asset_session_js') }}"></script>
        {% endblock %}

    </body>
</html>
