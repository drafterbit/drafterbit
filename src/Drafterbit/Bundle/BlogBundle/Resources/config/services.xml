<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>
    	<!-- Frontend Tenplating Extension -->
	    <service id="drafterbit_blog.twig.extension" class="Drafterbit\Bundle\BlogBundle\Twig\Extension\BlogExtension">
	        <tag name="twig.extension"></tag>
	        <argument type="service" id="kernel" />
	    </service>
        
        <service id="drafterbit_blog.frontpage" class="Drafterbit\Bundle\BlogBundle\Frontpage\Blog">
            <tag name="drafterbit_system.frontpage"></tag>
            <argument type="service" id="service_container"/>
        </service>

        <!-- Security-->
        <!-- PENDING
        <service id="security.access.post_voter" class="Drafterbit\Bundle\BlogBundle\Security\Authorization\Voter\PostVoter">
            <argument type="service" id="security.attribute_provider" />
            <tag name="security.voter" />
        </service> -->

        <!-- Log Formatter -->
        <service id="drafterbit_log_display_formatter.post" class="Drafterbit\Bundle\BlogBundle\Log\PostEntityFormatter">
            <argument type="service" id="kernel" />
            <tag name="drafterbit_system_log.display_formatter" />
        </service>

        <service id="drafterbit_log_display_formatter.category" class="Drafterbit\Bundle\BlogBundle\Log\CategoryEntityFormatter">
            <argument type="service" id="kernel" />
            <tag name="drafterbit_system_log.display_formatter" />
        </service>

        <!-- Search query -->
        <service id="drafterbit_blog.search.query_provider" class="Drafterbit\Bundle\BlogBundle\Search\QueryProvider">
            <argument type="service" id="database_connection" />
            <tag name="drafterbit_system.search.query_provider" />
        </service>
    </services>
</container>