<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>
    	<!-- Frontend Tenplating Extension -->
	    <service id="drafterbit_blog.twig.extension" class="Drafterbit\Bundle\BlogBundle\FrontendTemplating\BlogExtension">
	        <tag name="twig.extension"></tag>
	        <argument type="service" id="kernel" />
	    </service>
        
        <service id="drafterbit_blog.frontpage" class="Drafterbit\Bundle\BlogBundle\Frontpage\Blog">
            <tag name="drafterbit_system.frontpage"></tag>
            <argument type="service" id="service_container"/>
        </service>
    </services>
</container>