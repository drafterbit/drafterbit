{% extends "DrafterbitSystemBundle::base_index.html.twig" %}

{% block action %}
    <a href="{{ url('drafterbit_blog_category_edit', {id:'new'}) }}" class="btn btn-success btn-sm">
        <i class="fa fa-plus" style=""></i> {{ __('New Category') }}
    </a>
    <button class="btn btn-default btn-sm uncreate-action" type="submit" name="action" value="delete">
        <i class="fa fa-trash-o"></i> {{ __('Delete') }}
    </button>
{% endblock %}

{% block table %}
    <table class="table table-hover table-condensed" id="{{ view_id }}-data-table">
        <thead>
            <tr>
                <th class="sorting" width="15">
                    <input id="{{ view_id }}-checkall" type="checkbox">
                </th>
                <th width="30%">{{ __('Label') }}</th>
                <th width="70%">{{ __('Description') }}</th>
            </tr>
        </thead>
    </table>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{ asset('@DrafterbitBlogBundle/js/category/index.js') }}"></script>
{% endblock %}