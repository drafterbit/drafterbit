<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- widget -->
        <service id="dt_system.widget.form_builder" class="Drafterbit\System\Widget\WidgetFormBuilder">
            <argument type="service" id="service_container" />
        </service>

        <service id="dt_system.widget.manager" class="Drafterbit\System\Widget\WidgetManager">
            <argument type="service" id="service_container" />
        </service>

        <service id="dt_system.widget.search" class="Drafterbit\Bundle\SystemBundle\System\Widget\SearchWidget">
            <argument type="service" id="service_container" />
            <tag name="dt_system.widget" />
        </service>

        <service id="dt_system.widget.text" class="Drafterbit\Bundle\SystemBundle\System\Widget\TextWidget">
            <argument type="service" id="service_container" />
            <tag name="dt_system.widget" />
        </service>

        <service id="dt_system.widget.meta" class="Drafterbit\Bundle\SystemBundle\System\Widget\MetaWidget">
            <argument type="service" id="service_container" />
            <tag name="dt_system.widget" />
        </service>
    </services>
</container>