<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ __('Recent Activity') }}</h3>
    </div>
    <div class="panel-body">
        {% if logs %}
            <table width="100%" class="table table-condensed">
                <thead>
                    <tr>
                        <th>{{ __('Time') }}</th>
                        <th>{{ __('Activity') }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for log in logs %}
                    <tr>
                        {# @todo translate date #}
                        <td width="40%;">{{ log.time|date() }}</td>
                        <td>{{ log.activity|raw }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
        <?php else : ?>
            <p>{{ __('No recent activity') }}</p>
        {% endif %}
        <div>
            <a href="{{ url('drafterbit_system_log') }}" class="btn btn-sm pull-right">{{ __('View more') }}</a>
        </div>
    </div>
</div>