{% extends "DrafterbitSystemBundle::base.html.twig" %}

{% block content %}
<div class="container">
    <div class="row" style="margin-bottom:10px;">
        {% if is_granted('ROLE_CACHE_RENEW') %}
        <div class="col-md-8">
            <form method="POST">
                <button type="submit" name="renew" value="1" class="btn btn-default btn-sm">Renew Cache</button>
            </form>
        </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-md-8">
            <table class="table table-condensed table-bordered" id="log-data-table">
                <thead>
                    <tr>
                        <th width="70%">Key</th>
                        <th width="30%">Size</th>
                    </tr>
                </thead>
                <tbody>
                    {% for cache in caches %}
                        <tr>
                            <td>{{ cache.key }}</td>
                            <td>{{ cache.size }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{parent()}}

    {% if notif %}
        <script type="text/javascript">
            $.notify("{{ notif.message }}", "{{ notif.status }}");
        </script>>
    {% endif %}

{% endblock %}