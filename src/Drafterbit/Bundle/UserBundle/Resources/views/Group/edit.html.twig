{% extends "DrafterbitSystemBundle::base_edit.html.twig" %}

{% block action %}
    {{ form_widget(form.Save, {label: 'Save Group', attr: {class: "btn btn-success btn-sm", disabled:group_is_superadmin}}) }}
    <a href="{{path('drafterbit_user_group')}}" class="btn btn-default btn-sm">
        <i class="fa fa-times" style=""></i> {{ __('Close') }}
    </a>
{% endblock %}


{% block form %}
<div class="row row-content">
    <div class="col-md-8 col-md-offset-2 content-full">
        <div class="form-group">
            {{ form_label(form.name, 'Group Name', {label_attr:{class:"control-label"  }}) }}
            {{ form_widget(form.name, {attr:{class:"form-control", disabled:group_is_superadmin}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description, 'Description', {label_attr:{class:"control-label"  }}) }}
            {{ form_widget(form.description, {attr:{class:"form-control", disabled:group_is_superadmin}}) }}
        </div>

        <h3 style="">Roles</h3>
        <div class="row">

            {% for bundle,attributes in rolesGroup %}
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">{{bundle}} </h4>
                    </div>
                    <div class="panel-body" style="height:200px;overflow:auto">
                        <ul>
                        {% for key,lebel in attributes %}
                            {% for role in form.roles %}
                                {% if role.vars.value == key %}
                                    <li class="checkbox permission">
                                        {% if group_is_superadmin %}
                                            {{ form_widget(role, {attr:{disabled:"disabled", checked:"checked"}}) }}
                                        {% else %}
                                            {{ form_widget(role) }}
                                        {% endif %}

                                        {{ form_label(role, '', {label_attr: {class:"control-label"}})}}
                                    </li>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>

</div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{asset('@DrafterbitUserBundle/js/group/edit.js')}}"></script> 
{% endblock %}