<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="installer" class="drafterbit\Bundle\DistributionBundle\Installer\Installer">
            <argument id="service_container" type="service"/>
        </service>

        <!-- Steps -->
        <service id="installer_step_doctrine" class="drafterbit\Bundle\DistributionBundle\Installer\Step\DoctrineStep">
            <argument id="service_container" type="service"/>
            <tag name="installer.step"></tag>
        </service>
        <service id="installer_step_account" class="drafterbit\Bundle\DistributionBundle\Installer\Step\AccountStep">
            <argument id="service_container" type="service"/>
            <tag name="installer.step"></tag>
        </service>
        <service id="installer_step_site" class="drafterbit\Bundle\DistributionBundle\Installer\Step\SiteStep">
            <argument id="service_container" type="service"/>
            <tag name="installer.step"></tag>
        </service>

    </services>
</container>